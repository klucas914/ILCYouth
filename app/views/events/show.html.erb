<div class="container">
<h1><%= @event.name %></h1>

 
<p>
  <strong>Date:</strong>
  <%= @event.date %>
</p>

<p>
    <strong>Description:</strong>
    <%= @event.description %>
</p>

<p>
  <strong>Groups:</strong>
    <% @groups.each do |group| %>
      <%= group.name %>;
    <% end %>
 </p>
<div class="container">
<table class="table table-striped table-responsive">
<tr>
  <th><h2>Student Roster</h2></th>
  <th></th>
</tr>

<tr>
  <% @groups.each do |group| %>
    <% group.students.each do |student| %>
    	<tr><td><%= link_to "#{student.first_name} #{student.surname}", student_path(student) %> </td>
    	<td><%= button_to 'Check In', check_in_event_path(student) %></td></tr>
    	<% end %>
  <% end %>
</tr>
</table>
</div>
<%= link_to 'Add a Student', new_student_path %>  |
<%= link_to 'Edit Event', edit_event_path(@event) %> |
<%= link_to 'Back', events_path %>
</div>